<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondo"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recuperacion contraseÃ±a"
            android:textColor="@color/white"
            android:fontFamily="@font/sfprodisplayregular"
            android:textSize="31sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Para recuperar tu clave introduce tu correo electronico"
            android:fontFamily="@font/sfprodisplayregular"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="12dp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textoInputEmail"
            android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="32dp"
            app:startIconDrawable="@drawable/ic_correo"
            android:hint="@string/correo"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textoInputContra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnIniciarSesion"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:background="@drawable/redondo"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="32dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Continuar"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/sfprodisplayregular" />



    </LinearLayout>
</layout>